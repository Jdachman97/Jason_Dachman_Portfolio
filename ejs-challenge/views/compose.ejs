<%- include("partials/header") -%>


<h1>Compose</h1>
<div class="form-group">
    <form class="" action="/compose" method="post">
        <div class="form-group">
            <label>Title</label>
            <input class="form-control" type="text" name="postTitle">
        </div>
        <div class="form-group">
            <label>Post</label>
            <textarea class="form-control" type="text" name="postBody" cols="40" rows="5"></textarea>
        </div>
        <button class="btn btn-lg btn-primary" type="submit" name="button">Publish</button>
    </form>
</div>

